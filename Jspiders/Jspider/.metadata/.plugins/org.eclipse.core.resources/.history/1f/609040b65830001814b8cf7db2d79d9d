package one;

import java.util.Scanner;

public class Pattern {
	public static void main(String[] args) {

		Scanner s = new Scanner(System.in);

		int n, m, p=1,r=-1,z,x=0;
		n = s.nextInt();
		m = s.nextInt();
		int q=n*(n+1)/2;
		int a[]=new int[q];
		for( z=0;z<a.length;z++,r=r+2)
			a[z]=r;
		z--;
		//System.out.println(z);
		if (n == m) {
			for (int i = n; i > 0; i--) {
				x=x+i-1;
				z=z-x;
				for (int k = i; k > 0; k--) {
					System.out.print(a[z]+" ");
					z++;
				}
				z--;
				System.out.println();

				if (i > 1)
					for (int j = n; j > i - 1; j--) {
						System.out.print(" ");
					}

			}

			for (int i = 0; i < m; i++) {
				int k;
				for (k = i; k < m - 1; k++) {
					System.out.print(" ");
				}

				for (int j = 0; j < i + 1; j++) {
					System.out.print(p+" ");
					p=p+2;
				}

				System.out.println();
			}
		}

		else if (n < m) {

			for (int i = n; i > 0; i--) {

				for (int j = 0; j < m - n; j++) {
					System.out.print(" ");
				}

				for (int k = i; k > 0; k--) {
					System.out.print("* ");
				}
				System.out.println();

				if (i > 1)
					for (int j = n; j > i - 1; j--) {
						System.out.print(" ");
					}

			}

			for (int i = 0; i < m; i++) {
				int k;
				for (k = i; k < m - 1; k++) {
					System.out.print(" ");
				}

				for (int j = 0; j < i + 1; j++) {
					System.out.print(p+" ");
					p=p+2;
				}

				System.out.println();
			}
		}

		else if (m < n) {

			for (int i = n; i > 0; i--) {

				for (int k = i; k > 0; k--) {
					System.out.print("* ");
				}
				System.out.println();

				if (i > 1)
					for (int j = n; j > i - 1; j--) {
						System.out.print(" ");
					}

			}

			for (int i = 0; i < m; i++) {

				for (int j = 0; j < n - m; j++) {
					System.out.print(" ");
				}

				int k;
				for (k = i; k < m - 1; k++) {
					System.out.print(" ");
				}

				for (int j = 0; j < i + 1; j++) {
					System.out.print(p+" ");
					p=p+2;
				}

				System.out.println();
			}
		}

		s.close();
	}
}
